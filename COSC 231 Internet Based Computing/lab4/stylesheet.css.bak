div.mainDiv {
	width: 85%;
	max-width: 900px;
	font-family: 'Open Sans', sans-serif;
	margin: auto;
	background-color: #d5d5d5;
	color: #062f4f;
	border-radius: 3px;
	box-shadow: 0px 0px 8px #343434;
	padding: 10px;
}

div.topLine {
	color: black;
	font-family: 'Open Sans', sans-serif;
}


a.linkTitle {
	color: #813772;
	font-weight: bold;
	text-decoration: none;
	display: block;
	margin-top: 15px;
	margin-bottom: 0px;
	padding: 0px;
}

p.title {
	font-size: 22pt;
	font-weight: bold;
	color: #813772;
	text-align: center;
	padding: 0px;
	margin: 20px;
	font-family: 'Fjalla One', sans-serif;
}

body {
	background-color: #6d7993;
}

.alignleft {
	float: left;
	line-height: 1.1;
	padding: 0px;
	margin-bottom: 0px;
	margin-top: 0px;
}

.alignright {
	float: right;
	line-height: 1.1;
	padding: 0px;
	margin-bottom: 0px;
	margin-top: 0px;
}

div.clear {
	clear:both;
}
